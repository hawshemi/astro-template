---
interface Props {
  title?: string;
}

const { title = "Astro Template" } = Astro.props;
---

<header class="w-full p-6 sm:px-8 flex justify-between items-center border-b border-gray-200 dark:border-gray-800">
  <div class="flex items-center gap-2">
    <a href="/" class="font-bold text-xl sm:text-2xl">{title}</a>
  </div>
  <nav>
    <ul class="flex items-center gap-4 sm:gap-6">
      <li><a href="/" class="hover:text-blue-500 dark:hover:text-blue-400">Home</a></li>
      <li><a href="/about" class="hover:text-blue-500 dark:hover:text-blue-400">About</a></li>
    </ul>
  </nav>
</header> 