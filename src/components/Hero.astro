---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title,
  subtitle,
  ctaText = "Get Started",
  ctaLink = "#"
} = Astro.props;
---

<section class="w-full px-6 py-12 sm:py-24 sm:px-8 flex flex-col items-center justify-center text-center">
  <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight mb-4">
    {title}
  </h1>
  {subtitle && 
    <p class="text-lg sm:text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-8">
      {subtitle}
    </p>
  }
  <a 
    href={ctaLink}
    class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition duration-200"
  >
    {ctaText}
  </a>
</section> 