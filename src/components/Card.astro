---
interface Props {
  title: string;
  body: string;
  href?: string;
  imgSrc?: string;
}

const { 
  title, 
  body, 
  href, 
  imgSrc 
} = Astro.props;
---

<div class="border border-gray-200 dark:border-gray-800 rounded-lg overflow-hidden hover:shadow-md transition-shadow duration-200">
  {imgSrc && (
    <div class="aspect-video overflow-hidden">
      <img src={imgSrc} alt={title} class="w-full h-full object-cover" />
    </div>
  )}
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-gray-600 dark:text-gray-400 mb-4">{body}</p>
    {href && (
      <a 
        href={href} 
        class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline"
      >
        Learn more
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 010-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    )}
  </div>
</div> 